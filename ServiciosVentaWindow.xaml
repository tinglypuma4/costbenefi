<Window x:Class="costbenefi.Views.ServiciosVentaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="🛍️ Servicios de Venta" Height="700" Width="1200"
        WindowStartupLocation="CenterOwner" 
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Estilo para botones de acción -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para headers de sección -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#374151"/>
        </Style>

        <!-- Estilo para tabs de tipos de servicio -->
        <Style x:Key="ServiceTabStyle" TargetType="TabItem">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6,6,0,0"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#8B5CF6"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                                <Setter Property="Panel.ZIndex" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#A78BFA"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#8B5CF6" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🛍️" FontSize="24" Foreground="White" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Servicios de Venta" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Configure promociones, combos y servicios que utilizan inventario" FontSize="12" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="TxtFechaHora" 
                          Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm'}"
                          FontSize="12" Foreground="White" Opacity="0.9" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid Margin="15,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Botones de acción -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BtnNuevoServicio" Content="➕ Nuevo Servicio" Width="130"
                            Background="#10B981" Foreground="White" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Click="BtnNuevoServicio_Click"/>

                    <Button x:Name="BtnNuevaPromocion" Content="🎁 Nueva Promoción" Width="140"
                            Background="#F59E0B" Foreground="White"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="BtnNuevaPromocion_Click"/>

                    <Button x:Name="BtnEditarServicio" Content="✏️ Editar" Width="80"
                            Background="#3B82F6" Foreground="White"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="BtnEditarServicio_Click"/>

                    <Button x:Name="BtnEliminarServicio" Content="🗑️ Eliminar" Width="90"
                            Background="#EF4444" Foreground="White"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="BtnEliminarServicio_Click"/>
                </StackPanel>

                <!-- Búsqueda -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox x:Name="TxtBuscarServicio" 
                             Width="300" Height="28" Padding="8,5"
                             FontSize="13" VerticalContentAlignment="Center"
                             BorderBrush="#CBD5E1" BorderThickness="1"
                             Background="White" Margin="0,0,5,0"
                             TextChanged="TxtBuscarServicio_TextChanged"/>
                    <Button x:Name="BtnBuscarServicio" Content="🔍" 
                            Width="28" Height="28"
                            Background="#64748B" Foreground="White" FontSize="11"
                            BorderThickness="0" Click="BtnBuscarServicio_Click"/>
                </StackPanel>

                <!-- Estadísticas rápidas -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border Background="#8B5CF6" CornerRadius="3" Padding="6,2" Margin="0,0,5,0">
                        <TextBlock x:Name="TxtTotalServicios" Text="0 servicios" 
                                   FontSize="10" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    <Border Background="#10B981" CornerRadius="3" Padding="6,2">
                        <TextBlock x:Name="TxtServiciosActivos" Text="0 activos" 
                                   FontSize="10" FontWeight="Bold" Foreground="White"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido principal con TabControl -->
        <TabControl Grid.Row="2" Background="White" BorderThickness="0" Margin="10">

            <!-- Tab 1: Servicios Básicos -->
            <TabItem Header="💼 Servicios" Style="{StaticResource ServiceTabStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Panel izquierdo: Lista de servicios -->
                    <Border Grid.Column="0" Background="White" CornerRadius="10" 
                            BorderBrush="#E5E7EB" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header lista servicios -->
                            <Border Grid.Row="0" Background="#F9FAFB" CornerRadius="10,10,0,0" 
                                    BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="15,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="💼 Servicios Configurados" 
                                               Style="{StaticResource SectionHeaderStyle}"/>
                                    <TextBlock Grid.Column="1" x:Name="TxtCountServicios" Text="0 servicios" 
                                               FontSize="12" Foreground="#6B7280" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Lista de servicios -->
                            <DataGrid Grid.Row="1" x:Name="DgServicios" 
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False" 
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      AlternatingRowBackground="#F8FAFC"
                                      RowBackground="White"
                                      BorderThickness="0"
                                      FontSize="11"
                                      RowHeight="30"
                                      ColumnHeaderHeight="32"
                                      Margin="10"
                                      SelectionChanged="DgServicios_SelectionChanged">

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F1F5F9"/>
                                        <Setter Property="Foreground" Value="#374151"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Padding" Value="8,5"/>
                                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="📝 Nombre Servicio" Binding="{Binding NombreServicio}" 
                                                        Width="140" FontWeight="SemiBold"/>
                                    <DataGridTextColumn Header="💰 Precio" Binding="{Binding PrecioServicio, StringFormat=C2}" 
                                                        Width="80"/>
                                    <DataGridTextColumn Header="⏱️ Duración" Binding="{Binding DuracionEstimada}" 
                                                        Width="80"/>
                                    <DataGridTextColumn Header="🏷️ Categoría" Binding="{Binding CategoriaServicio}" 
                                                        Width="90"/>
                                    <DataGridTemplateColumn Header="✅" Width="40">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Ellipse Width="12" Height="12" HorizontalAlignment="Center">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="#10B981"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Activo}" Value="False">
                                                                    <Setter Property="Fill" Value="#EF4444"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Panel derecho: Detalles del servicio -->
                    <Border Grid.Column="2" Background="White" CornerRadius="10" 
                            BorderBrush="#E5E7EB" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header detalles -->
                            <Border Grid.Row="0" Background="#F9FAFB" CornerRadius="10,10,0,0" 
                                    BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="15,10">
                                <TextBlock Text="🔍 Detalles del Servicio" Style="{StaticResource SectionHeaderStyle}"/>
                            </Border>

                            <!-- Contenido detalles -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                                <StackPanel x:Name="PanelDetallesServicio">
                                    
                                    <!-- Mensaje por defecto -->
                                    <TextBlock x:Name="TxtMensajeSeleccionServicio" 
                                              Text="Seleccione un servicio para ver sus detalles" 
                                              FontSize="12" Foreground="#6B7280" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="0,50,0,0"/>

                                    <!-- Panel de detalles (inicialmente oculto) -->
                                    <StackPanel x:Name="PanelInfoServicio" Visibility="Collapsed">
                                        
                                        <!-- Información básica -->
                                        <Border Background="#F3E8FF" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                                            <StackPanel>
                                                <TextBlock x:Name="TxtNombreServicioDetalle" Text="" 
                                                          FontSize="14" FontWeight="Bold" Foreground="#7C3AED"/>
                                                <TextBlock x:Name="TxtDescripcionServicio" Text="" 
                                                          FontSize="11" Foreground="#374151" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Materiales necesarios -->
                                        <TextBlock Text="🧰 Materiales Requeridos:" FontSize="12" FontWeight="Bold" 
                                                  Foreground="#374151" Margin="0,0,0,8"/>
                                        <ListBox x:Name="LstMaterialesServicio" Height="100" 
                                                BorderThickness="1" BorderBrush="#E5E7EB" 
                                                Background="#F9FAFB" Margin="0,0,0,15">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding NombreMaterial}" 
                                                                  FontSize="11" VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="1" FontSize="10" Foreground="#6B7280" VerticalAlignment="Center">
                                                            <Run Text="{Binding Cantidad}"/>
                                                            <Run Text=" "/>
                                                            <Run Text="{Binding Unidad}"/>
                                                        </TextBlock>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <!-- Información comercial -->
                                        <Border Background="#ECFDF5" CornerRadius="5" Padding="10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="💰 Información Comercial" 
                                                          FontSize="12" FontWeight="Bold" Foreground="#059669" Margin="0,0,0,8"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Precio:" FontSize="10" Foreground="#059669"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtPrecioDetalle" Text="" 
                                                          FontSize="10" FontWeight="Bold" Foreground="#059669"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Duración:" FontSize="10" Foreground="#059669"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtDuracionDetalle" Text="" 
                                                          FontSize="10" FontWeight="Bold" Foreground="#059669"/>

                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Margen:" FontSize="10" Foreground="#059669"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtMargenDetalle" Text="" 
                                                          FontSize="10" FontWeight="Bold" Foreground="#059669"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>

                            <!-- Botones de acción para servicio seleccionado -->
                            <Border Grid.Row="2" Background="#F9FAFB" BorderBrush="#E5E7EB" 
                                    BorderThickness="0,1,0,0" CornerRadius="0,0,10,10" Padding="15">
                                <StackPanel x:Name="PanelBotonesServicio" Visibility="Collapsed">
                                    <Button x:Name="BtnActivarPOS" Content="💰 Activar en POS" 
                                           Height="35" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"
                                           Background="#8B5CF6" Foreground="White" BorderThickness="0"
                                           Click="BtnActivarPOS_Click"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button Grid.Column="0" x:Name="BtnDuplicarServicio" Content="📋 Duplicar" 
                                               Height="30" FontSize="11" FontWeight="Bold" Margin="0,0,4,0"
                                               Background="#6366F1" Foreground="White" BorderThickness="0"
                                               Click="BtnDuplicarServicio_Click"/>
                                        
                                        <Button Grid.Column="1" x:Name="BtnAnalisisMargen" Content="📊 Margen" 
                                               Height="30" FontSize="11" FontWeight="Bold" Margin="4,0,0,0"
                                               Background="#F59E0B" Foreground="White" BorderThickness="0"
                                               Click="BtnAnalisisMargen_Click"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab 2: Promociones y Combos -->
            <TabItem Header="🎁 Promociones" Style="{StaticResource ServiceTabStyle}">
                <Grid>
                    <Border Background="#FEF3C7" CornerRadius="10" Padding="30" Margin="20">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="🎁" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="Promociones y Combos" FontSize="24" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="#92400E" Margin="0,0,0,10"/>
                            <TextBlock Text="Configure descuentos automáticos, ofertas por tiempo limitado y combos especiales" 
                                      FontSize="14" HorizontalAlignment="Center" Foreground="#92400E" 
                                      Margin="0,0,0,30" TextWrapping="Wrap" TextAlignment="Center"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="🎁 Nueva Promoción" Width="150" Height="40" Margin="0,0,15,0"
                                       Background="#F59E0B" Foreground="White" FontSize="14" FontWeight="Bold"
                                       BorderThickness="0" Click="BtnNuevaPromocion_Click"/>
                                <Button Content="📦 Nuevo Combo" Width="150" Height="40"
                                       Background="#8B5CF6" Foreground="White" FontSize="14" FontWeight="Bold"
                                       BorderThickness="0" Click="BtnNuevoCombo_Click"/>
                            </StackPanel>

                            <TextBlock Text="Próxima implementación: Sistema completo de promociones automáticas" 
                                      FontSize="12" Foreground="#92400E" HorizontalAlignment="Center" 
                                      FontStyle="Italic" Margin="0,20,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab 3: Integración POS -->
            <TabItem Header="💰 Integración POS" Style="{StaticResource ServiceTabStyle}">
                <Grid>
                    <Border Background="#EBF8FF" CornerRadius="10" Padding="30" Margin="20">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="💰" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="Integración con Punto de Venta" FontSize="24" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="#1E40AF" Margin="0,0,0,10"/>
                            <TextBlock Text="Configure qué servicios aparecen en el POS y cómo se procesan automáticamente" 
                                      FontSize="14" HorizontalAlignment="Center" Foreground="#1E40AF" 
                                      Margin="0,0,0,30" TextWrapping="Wrap" TextAlignment="Center"/>
                            
                            <Button Content="⚙️ Configurar POS" Width="200" Height="40"
                                   Background="#3B82F6" Foreground="White" FontSize="14" FontWeight="Bold"
                                   BorderThickness="0" Click="BtnConfigurarPOS_Click"/>

                            <TextBlock Text="Los servicios configurados aparecerán como productos especiales en el punto de venta" 
                                      FontSize="12" Foreground="#1E40AF" HorizontalAlignment="Center" 
                                      FontStyle="Italic" Margin="0,20,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
            <Grid Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TxtStatusServicios" Grid.Column="0" 
                          Text="🛍️ Sistema de Servicios listo" FontSize="11" 
                          VerticalAlignment="Center" Foreground="#6B7280"/>

                <TextBlock x:Name="TxtServiciosVendidos" Grid.Column="1" 
                          Text="Vendidos hoy: 0" FontSize="11" FontWeight="Bold" 
                          Foreground="#8B5CF6" VerticalAlignment="Center" Margin="15,0"/>

                <TextBlock x:Name="TxtIngresoServicios" Grid.Column="2" 
                          Text="Ingresos: $0.00" FontSize="11" FontWeight="Bold" 
                          Foreground="#10B981" VerticalAlignment="Center" Margin="15,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>