<Window x:Class="costbenefi.Views.VentanaDistribucionAmpliada"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Vista Ampliada - Distribución ABC" 
        Height="600" Width="900" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F9FAFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER PRINCIPAL -->
        <Border Grid.Row="0" Background="#6366F1" Padding="25,18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="🥧" FontSize="26" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Distribución ABC Ampliada" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Visualización detallada de la clasificación ABC con métricas avanzadas" 
                                       FontSize="12" Foreground="White" Opacity="0.9"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#FFFFFF" CornerRadius="6" Padding="8,4" Opacity="0.9" Margin="0,0,10,0">
                            <TextBlock x:Name="TxtTotalItems" Text="📊 Total: -- items" FontSize="10" FontWeight="Bold" Foreground="#374151"/>
                        </Border>
                        <Border Background="#FFFFFF" CornerRadius="6" Padding="8,4" Opacity="0.9" Margin="0,0,10,0">
                            <TextBlock x:Name="TxtTipoAnalisis" Text="🎯 Productos" FontSize="10" FontWeight="Bold" Foreground="#374151"/>
                        </Border>
                        <Border Background="#FFFFFF" CornerRadius="6" Padding="8,4" Opacity="0.9">
                            <TextBlock x:Name="TxtCriterioAnalisis" Text="💰 Rentabilidad" FontSize="10" FontWeight="Bold" Foreground="#374151"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnExportarDistribucion" Content="📸 Exportar" Width="110" Height="35"
                            Background="#FFFFFF" Foreground="#6366F1" FontSize="11"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="BtnExportarDistribucion_Click"/>
                    
                    <Button x:Name="BtnCerrarVentana" Content="✖️ Cerrar" Width="90" Height="35"
                            Background="#EF4444" Foreground="White" FontSize="11"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="BtnCerrarVentana_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TOOLBAR DE CONTROLES -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="25,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📊 Visualización:" VerticalAlignment="Center" FontWeight="Bold" 
                               FontSize="12" Foreground="#374151" Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="CmbTipoVisualizacion" Width="140" Height="32" 
                              VerticalContentAlignment="Center" Margin="0,0,15,0" FontSize="11"
                              SelectionChanged="CmbTipoVisualizacion_SelectionChanged">
                        <ComboBoxItem Content="🥧 Gráfico Circular" IsSelected="True" Tag="circular"/>
                        <ComboBoxItem Content="📊 Barras Horizontales" Tag="barras"/>
                        <ComboBoxItem Content="📈 Gráfico de Área" Tag="area"/>
                        <ComboBoxItem Content="🎯 Dona (Donut)" Tag="dona"/>
                    </ComboBox>

                    <TextBlock Text="🎨 Estilo:" VerticalAlignment="Center" FontWeight="Bold" 
                               FontSize="12" Foreground="#374151" Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="CmbEstilo" Width="110" Height="32" 
                              VerticalContentAlignment="Center" FontSize="11"
                              SelectionChanged="CmbEstilo_SelectionChanged">
                        <ComboBoxItem Content="🎨 Estándar" IsSelected="True" Tag="estandar"/>
                        <ComboBoxItem Content="🌙 Oscuro" Tag="oscuro"/>
                        <ComboBoxItem Content="🌈 Vibrante" Tag="vibrante"/>
                        <ComboBoxItem Content="📰 Minimal" Tag="minimal"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <CheckBox x:Name="ChkMostrarPorcentajes" Content="📊 Porcentajes" IsChecked="True" 
                              VerticalAlignment="Center" Margin="0,0,15,0" FontSize="11"/>
                    <CheckBox x:Name="ChkMostrarValores" Content="💰 Valores" IsChecked="True" 
                              VerticalAlignment="Center" Margin="0,0,15,0" FontSize="11"/>
                    <CheckBox x:Name="ChkMostrarLeyenda" Content="🗂️ Leyenda" IsChecked="True" 
                              VerticalAlignment="Center" FontSize="11"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnActualizar" Content="🔄 Actualizar" Width="100" Height="32"
                            Background="#059669" Foreground="White" FontSize="11"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="BtnActualizar_Click"/>

                    <Button x:Name="BtnAnimaciones" Content="✨ Animar" Width="90" Height="32"
                            Background="#8B5CF6" Foreground="White" FontSize="11"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="BtnAnimaciones_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Row="2" Margin="25,15,25,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- ÁREA DEL GRÁFICO PRINCIPAL -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header del gráfico -->
                    <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" Padding="20,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="TxtTituloGrafico" Text="Distribución ABC por Rentabilidad" 
                                           FontSize="16" FontWeight="Bold" Foreground="#374151"/>
                                <TextBlock x:Name="TxtDescripcionGrafico" Text="Clasificación automática de items según análisis ABC" 
                                           FontSize="11" Foreground="#6B7280" Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="TxtTotalValor" Text="Total: $--" 
                                           FontSize="12" FontWeight="Bold" Foreground="#059669" 
                                           VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <Button x:Name="BtnDetalles" Content="📋" Width="35" Height="30"
                                        Background="#6B7280" Foreground="White" FontSize="14"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="BtnDetalles_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Área del gráfico con scroll -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                                  Background="#FAFAFA" Padding="15">
                        <Canvas x:Name="CanvasDistribucionAmpliada" Background="White" 
                                MinWidth="500" MinHeight="400" 
                                ClipToBounds="False"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- PANEL DE MÉTRICAS Y DETALLES -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- KPIs de Distribución -->
                <Border Grid.Row="0" Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="15">
                    <StackPanel>
                        <TextBlock Text="📊 Métricas ABC" FontSize="14" FontWeight="Bold" Foreground="#374151" Margin="0,0,0,12"/>
                        
                        <!-- Clase A -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#10B981" Width="15" Height="15" CornerRadius="3" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" Text="Clase A" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock x:Name="TxtCantidadA" Text="--" FontSize="11" FontWeight="Bold" Foreground="#10B981"/>
                                <TextBlock Text=" (" FontSize="9" Foreground="#6B7280"/>
                                <TextBlock x:Name="TxtPorcentajeA" Text="--%" FontSize="9" Foreground="#6B7280"/>
                                <TextBlock Text=")" FontSize="9" Foreground="#6B7280"/>
                            </StackPanel>
                        </Grid>

                        <!-- Clase B -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#F59E0B" Width="15" Height="15" CornerRadius="3" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" Text="Clase B" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock x:Name="TxtCantidadB" Text="--" FontSize="11" FontWeight="Bold" Foreground="#F59E0B"/>
                                <TextBlock Text=" (" FontSize="9" Foreground="#6B7280"/>
                                <TextBlock x:Name="TxtPorcentajeB" Text="--%" FontSize="9" Foreground="#6B7280"/>
                                <TextBlock Text=")" FontSize="9" Foreground="#6B7280"/>
                            </StackPanel>
                        </Grid>

                        <!-- Clase C -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#EF4444" Width="15" Height="15" CornerRadius="3" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" Text="Clase C" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock x:Name="TxtCantidadC" Text="--" FontSize="11" FontWeight="Bold" Foreground="#EF4444"/>
                                <TextBlock Text=" (" FontSize="9" Foreground="#6B7280"/>
                                <TextBlock x:Name="TxtPorcentajeC" Text="--%" FontSize="9" Foreground="#6B7280"/>
                                <TextBlock Text=")" FontSize="9" Foreground="#6B7280"/>
                            </StackPanel>
                        </Grid>

                        <!-- Separador -->
                        <Border Height="1" Background="#E5E7EB" Margin="0,8"/>

                        <!-- Valor por clase -->
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Valor Clase A:" FontSize="10" Foreground="#6B7280"/>
                            <TextBlock Grid.Column="1" x:Name="TxtValorA" Text="$--" FontSize="10" FontWeight="Bold" Foreground="#10B981"/>
                        </Grid>
                        
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Valor Clase B:" FontSize="10" Foreground="#6B7280"/>
                            <TextBlock Grid.Column="1" x:Name="TxtValorB" Text="$--" FontSize="10" FontWeight="Bold" Foreground="#F59E0B"/>
                        </Grid>
                        
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Valor Clase C:" FontSize="10" Foreground="#6B7280"/>
                            <TextBlock Grid.Column="1" x:Name="TxtValorC" Text="$--" FontSize="10" FontWeight="Bold" Foreground="#EF4444"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Análisis Detallado -->
                <Border Grid.Row="2" Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="10,10,0,0" Padding="15,10">
                            <TextBlock Text="🔍 Análisis Detallado" FontSize="12" FontWeight="Bold" Foreground="#374151"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15,10">
                            <StackPanel x:Name="PanelAnalisisDetallado">
                                <TextBlock Text="📊 Cargando análisis detallado..." 
                                           FontSize="10" Foreground="#6B7280" TextWrapping="Wrap"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- STATUS BAR -->
        <Border Grid.Row="3" Background="#F8FAFC" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="25,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TxtStatusDistribucion" Grid.Column="0" 
                           Text="🥧 Distribución ABC - Vista ampliada cargada" 
                           FontSize="10" VerticalAlignment="Center" Foreground="#6B7280"/>

                <TextBlock x:Name="TxtItemsAnalizados" Grid.Column="1" 
                           Text="Items: --" FontSize="10" FontWeight="Bold" 
                           Foreground="#059669" VerticalAlignment="Center" Margin="15,0"/>

                <TextBlock x:Name="TxtUltimaActualizacion" Grid.Column="2" 
                           Text="Actualizado: --" FontSize="10" FontWeight="Bold" 
                           Foreground="#8B5CF6" VerticalAlignment="Center" Margin="15,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>