<Window x:Class="costbenefi.Views.VentanaConfiguracionABC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configuración Avanzada - Análisis ABC" 
        Height="550" Width="700" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="650">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F9FAFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#4F46E5" Padding="25,18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="⚙️" FontSize="24" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Configuración Avanzada ABC" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Personaliza los parámetros del análisis para obtener resultados precisos" 
                                       FontSize="11" Foreground="White" Opacity="0.9"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" x:Name="BtnAyuda" Content="❓ Ayuda" Width="90" Height="35"
                        Background="#FFFFFF" Foreground="#4F46E5" FontSize="11"
                        Style="{StaticResource ModernButtonStyle}"
                        Click="BtnAyuda_Click"/>
            </Grid>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25,20">
            <StackPanel>
                
                <!-- SECCIÓN: TIPO DE ANÁLISIS -->
                <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🎯 Configuración del Análisis" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Tipo de Análisis:" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <ComboBox x:Name="CmbTipoAnalisisConfig" Height="35" FontSize="11"
                                          SelectionChanged="CmbTipoAnalisisConfig_SelectionChanged">
                                    <ComboBoxItem Content="📦 Productos" Tag="productos"/>
                                    <ComboBoxItem Content="🏭 Proveedores" Tag="proveedores"/>
                                    <ComboBoxItem Content="👥 Clientes" Tag="clientes"/>
                                    <ComboBoxItem Content="🏷️ Categorías" Tag="categorias"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Criterio de Clasificación:" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <ComboBox x:Name="CmbCriterioAnalisisConfig" Height="35" FontSize="11"
                                          SelectionChanged="CmbCriterioAnalisisConfig_SelectionChanged">
                                    <ComboBoxItem Content="💰 Rentabilidad" Tag="rentabilidad"/>
                                    <ComboBoxItem Content="📈 Volumen de Ventas" Tag="volumen"/>
                                    <ComboBoxItem Content="🔄 Rotación de Inventario" Tag="rotacion"/>
                                    <ComboBoxItem Content="🎯 Puntuación Mixta" Tag="mixto"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- SECCIÓN: UMBRALES ABC -->
                <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="📊 Umbrales de Clasificación ABC" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Clase A -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <Border Background="#10B981" CornerRadius="6" Padding="10,8" Margin="0,0,0,8">
                                    <TextBlock Text="🥇 Clase A (Alta Prioridad)" FontWeight="Bold" Foreground="White" 
                                               FontSize="11" TextAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Text="Umbral máximo (%):" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox x:Name="TxtUmbralA" Text="80" Height="30" FontSize="11" 
                                         VerticalContentAlignment="Center" TextChanged="UmbralA_TextChanged"/>
                                
                                <TextBlock Text="Descripción:" FontSize="10" Margin="0,8,0,3"/>
                                <TextBlock Text="Items de mayor valor/importancia que requieren atención prioritaria" 
                                           FontSize="9" Foreground="#6B7280" TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Clase B -->
                            <StackPanel Grid.Column="1" Margin="5,0">
                                <Border Background="#F59E0B" CornerRadius="6" Padding="10,8" Margin="0,0,0,8">
                                    <TextBlock Text="🥈 Clase B (Prioridad Media)" FontWeight="Bold" Foreground="White" 
                                               FontSize="11" TextAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Text="Umbral máximo (%):" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox x:Name="TxtUmbralB" Text="95" Height="30" FontSize="11" 
                                         VerticalContentAlignment="Center" TextChanged="UmbralB_TextChanged"/>
                                
                                <TextBlock Text="Descripción:" FontSize="10" Margin="0,8,0,3"/>
                                <TextBlock Text="Items de valor moderado que requieren gestión regular" 
                                           FontSize="9" Foreground="#6B7280" TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Clase C -->
                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <Border Background="#EF4444" CornerRadius="6" Padding="10,8" Margin="0,0,0,8">
                                    <TextBlock Text="🥉 Clase C (Baja Prioridad)" FontWeight="Bold" Foreground="White" 
                                               FontSize="11" TextAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Text="Resto automático:" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox x:Name="TxtUmbralC" Text="100" Height="30" FontSize="11" 
                                         VerticalContentAlignment="Center" IsReadOnly="True" Background="#F3F4F6"/>
                                
                                <TextBlock Text="Descripción:" FontSize="10" Margin="0,8,0,3"/>
                                <TextBlock Text="Items de menor valor que requieren gestión básica" 
                                           FontSize="9" Foreground="#6B7280" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>

                        <!-- Visualización de umbrales -->
                        <Border Background="#F8FAFC" CornerRadius="6" Padding="15" Margin="0,15,0,0">
                            <StackPanel>
                                <TextBlock Text="📈 Vista Previa de Clasificación" FontWeight="Bold" FontSize="12" Margin="0,0,0,8"/>
                                <Canvas x:Name="CanvasVistaPrevia" Height="40" Background="White"/>
                                <TextBlock x:Name="TxtDescripcionUmbrales" Text="A: 0-80% | B: 80-95% | C: 95-100%" 
                                           FontSize="10" Foreground="#6B7280" TextAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- SECCIÓN: FILTROS AVANZADOS -->
                <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🔍 Filtros Avanzados" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <CheckBox x:Name="ChkSoloActivosConfig" Content="Solo productos activos" IsChecked="True" 
                                          FontSize="11" Margin="0,0,0,8"/>
                                <CheckBox x:Name="ChkExcluirSinVentas" Content="Excluir items sin ventas" IsChecked="False" 
                                          FontSize="11" Margin="0,0,0,8"/>
                                <CheckBox x:Name="ChkAgruparCategorias" Content="Agrupar por categorías" IsChecked="False" 
                                          FontSize="11" Margin="0,0,0,8"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <TextBlock Text="Valor mínimo: $" FontSize="11" VerticalAlignment="Center"/>
                                    <TextBox x:Name="TxtValorMinimo" Text="0" Width="80" Height="25" FontSize="10" 
                                             VerticalContentAlignment="Center" Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Items máximos:" FontSize="11" VerticalAlignment="Center"/>
                                    <TextBox x:Name="TxtItemsMaximos" Text="100" Width="60" Height="25" FontSize="10" 
                                             VerticalContentAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Items mínimos:" FontSize="11" VerticalAlignment="Center"/>
                                    <TextBox x:Name="TxtItemsMinimos" Text="5" Width="60" Height="25" FontSize="10" 
                                             VerticalContentAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>

                                <TextBlock Text="Período de análisis:" FontSize="11" Margin="0,10,0,3"/>
                                <ComboBox x:Name="CmbPeriodoAnalisis" Height="30" FontSize="10">
                                    <ComboBoxItem Content="Último mes" IsSelected="True"/>
                                    <ComboBoxItem Content="Últimos 3 meses"/>
                                    <ComboBoxItem Content="Últimos 6 meses"/>
                                    <ComboBoxItem Content="Último año"/>
                                    <ComboBoxItem Content="Personalizado"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- SECCIÓN: PESOS PARA ANÁLISIS MIXTO -->
                <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="⚖️ Pesos para Análisis Mixto" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Rentabilidad -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="💰 Rentabilidad" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                <Slider x:Name="SliderRentabilidad" Minimum="0" Maximum="100" Value="50" 
                                        TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
                                <TextBlock x:Name="TxtPesoRentabilidad" Text="50%" FontSize="10" TextAlignment="Center" 
                                           Foreground="#059669" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Volumen -->
                            <StackPanel Grid.Column="1" Margin="5,0">
                                <TextBlock Text="📈 Volumen" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                <Slider x:Name="SliderVolumen" Minimum="0" Maximum="100" Value="30" 
                                        TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
                                <TextBlock x:Name="TxtPesoVolumen" Text="30%" FontSize="10" TextAlignment="Center" 
                                           Foreground="#3B82F6" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Rotación -->
                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <TextBlock Text="🔄 Rotación" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                                <Slider x:Name="SliderRotacion" Minimum="0" Maximum="100" Value="20" 
                                        TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
                                <TextBlock x:Name="TxtPesoRotacion" Text="20%" FontSize="10" TextAlignment="Center" 
                                           Foreground="#8B5CF6" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>

                        <Border Background="#FEF3C7" CornerRadius="6" Padding="10" Margin="0,15,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚡" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="Total de pesos:" FontWeight="Bold" FontSize="11"/>
                                    <TextBlock x:Name="TxtTotalPesos" Text="100%" FontSize="10" Foreground="#92400E"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- SECCIÓN: CONFIGURACIONES ADICIONALES -->
                <Border Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🔧 Configuraciones Adicionales" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <CheckBox x:Name="ChkActualizacionAutomatica" Content="Actualización automática" IsChecked="True" 
                                          FontSize="11" Margin="0,0,0,8"/>
                                <CheckBox x:Name="ChkMostrarInsights" Content="Generar insights automáticos" IsChecked="True" 
                                          FontSize="11" Margin="0,0,0,8"/>
                                <CheckBox x:Name="ChkGuardarConfiguracion" Content="Guardar configuración" IsChecked="True" 
                                          FontSize="11" Margin="0,0,0,8"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Formato de números:" FontSize="11" Margin="0,0,0,3"/>
                                <ComboBox x:Name="CmbFormatoNumeros" Height="28" FontSize="10">
                                    <ComboBoxItem Content="Estándar (1,234.56)" IsSelected="True"/>
                                    <ComboBoxItem Content="Con moneda ($1,234.56)"/>
                                    <ComboBoxItem Content="Abreviado (1.2K)"/>
                                    <ComboBoxItem Content="Científico (1.23E+03)"/>
                                </ComboBox>

                                <TextBlock Text="Idioma:" FontSize="11" Margin="0,8,0,3"/>
                                <ComboBox x:Name="CmbIdioma" Height="28" FontSize="10">
                                    <ComboBoxItem Content="Español" IsSelected="True"/>
                                    <ComboBoxItem Content="English"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- BOTONES DE ACCIÓN -->
        <Border Grid.Row="2" Background="#F8FAFC" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="25,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BtnRestaurarDefecto" Content="🔄 Restaurar Valores por Defecto" Width="200" Height="35"
                            Background="#6B7280" Foreground="White" FontSize="11"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="BtnRestaurarDefecto_Click"/>
                    
                    <Button x:Name="BtnVistaPrevia" Content="👁️ Vista Previa" Width="120" Height="35"
                            Background="#8B5CF6" Foreground="White" FontSize="11"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="BtnVistaPrevia_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnCancelar" Content="❌ Cancelar" Width="100" Height="35"
                            Background="#EF4444" Foreground="White" FontSize="11"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="BtnCancelar_Click"/>
                    
                    <Button x:Name="BtnAplicar" Content="✅ Aplicar Configuración" Width="160" Height="35"
                            Background="#059669" Foreground="White" FontSize="11"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="BtnAplicar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>