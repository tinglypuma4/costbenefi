<UserControl x:Class="costbenefi.Views.ModuloEnDesarrolloControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="DesarrolloButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Border CornerRadius="15" Margin="30" Padding="40" Background="White"
                BorderBrush="#E5E7EB" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600">
                
                <!-- Icono principal -->
                <TextBlock Text="🚧" FontSize="80" HorizontalAlignment="Center" 
                           Margin="0,0,0,20" Opacity="0.8"/>

                <!-- Título -->
                <TextBlock Text="Módulo en Desarrollo" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#374151" Margin="0,0,0,10"/>

                <!-- Nombre del módulo -->
                <Border Background="#FEF3C7" CornerRadius="20" Padding="15,8" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📝" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock x:Name="TxtNombreModulo" Text="Módulo Específico" 
                                   FontSize="16" FontWeight="Bold" Foreground="#92400E"/>
                    </StackPanel>
                </Border>

                <!-- Descripción -->
                <Border Background="#F0FDF4" CornerRadius="10" Padding="20" Margin="0,0,0,25"
                        BorderBrush="#BBF7D0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📋 ¿Qué incluirá este módulo?" FontSize="14" FontWeight="Bold" 
                                   Foreground="#166534" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtDescripcion" 
                                   Text="Funcionalidades avanzadas de análisis financiero"
                                   FontSize="13" Foreground="#15803D" TextWrapping="Wrap" 
                                   HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Información de desarrollo -->
                <Border Background="#EFF6FF" CornerRadius="10" Padding="20" Margin="0,0,0,25"
                        BorderBrush="#BFDBFE" BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="📅" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Fecha estimada de finalización:" FontSize="12" 
                                       Foreground="#1E40AF" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <TextBlock x:Name="TxtFechaEstimada" Text="Próximamente"
                                   FontSize="14" FontWeight="Bold" Foreground="#2563EB" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Estado de desarrollo -->
                <Border Background="#FDF4FF" CornerRadius="10" Padding="20" Margin="0,0,0,30"
                        BorderBrush="#E9D5FF" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="🔄 Estado Actual del Desarrollo" FontSize="14" FontWeight="Bold" 
                                   Foreground="#7C2D12" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        
                        <Grid MaxWidth="400">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Análisis -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="✅" FontSize="14" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Análisis de requerimientos" 
                                       FontSize="12" Foreground="#166534" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="100%" 
                                       FontSize="12" FontWeight="Bold" Foreground="#059669" Margin="10,0,0,5"/>

                            <!-- Diseño -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="✅" FontSize="14" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Diseño de interfaces" 
                                       FontSize="12" Foreground="#166534" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="85%" 
                                       FontSize="12" FontWeight="Bold" Foreground="#059669" Margin="10,0,0,5"/>

                            <!-- Desarrollo -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="🔄" FontSize="14" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Desarrollo y programación" 
                                       FontSize="12" Foreground="#F59E0B" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="45%" 
                                       FontSize="12" FontWeight="Bold" Foreground="#F59E0B" Margin="10,0,0,5"/>

                            <!-- Pruebas -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="⏳" FontSize="14" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Pruebas y validación" 
                                       FontSize="12" Foreground="#6B7280" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="0%" 
                                       FontSize="12" FontWeight="Bold" Foreground="#6B7280" Margin="10,0,0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Características planeadas -->
                <Border Background="#FFFBEB" CornerRadius="10" Padding="20" Margin="0,0,0,30"
                        BorderBrush="#FDE68A" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="⭐ Características Destacadas Planeadas" FontSize="14" FontWeight="Bold" 
                                   Foreground="#92400E" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        
                        <StackPanel MaxWidth="500">
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <TextBlock Text="🎯" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="Interfaz intuitiva y fácil de usar" 
                                           FontSize="12" Foreground="#78350F"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <TextBlock Text="⚡" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="Cálculos en tiempo real y alta velocidad" 
                                           FontSize="12" Foreground="#78350F"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <TextBlock Text="📊" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="Gráficos interactivos y visualizaciones avanzadas" 
                                           FontSize="12" Foreground="#78350F"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <TextBlock Text="💾" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="Exportación a múltiples formatos (PDF, Excel)" 
                                           FontSize="12" Foreground="#78350F"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <TextBlock Text="🔒" FontSize="12" Margin="0,0,8,0"/>
                                <TextBlock Text="Seguridad y respaldo automático de datos" 
                                           FontSize="12" Foreground="#78350F"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Botón de acción -->
                <Button x:Name="BtnNotificarInteres" 
                        Content="🔔 Notificarme cuando esté listo" 
                        Width="280" Background="#8B5CF6" Foreground="White"
                        Style="{StaticResource DesarrolloButtonStyle}"
                        Click="BtnNotificarInteres_Click"/>

                <!-- Texto informativo final -->
                <TextBlock Text="👆 Su solicitud nos ayuda a priorizar el desarrollo de las funcionalidades más demandadas" 
                           FontSize="11" Foreground="#6B7280" TextWrapping="Wrap" 
                           HorizontalAlignment="Center" TextAlignment="Center" 
                           Margin="20,15,20,0" MaxWidth="400"/>

                <!-- Footer con contacto -->
                <Border Background="#F9FAFB" CornerRadius="8" Padding="15" Margin="0,20,0,0"
                        BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="💡" FontSize="12" Margin="0,0,8,0"/>
                        <TextBlock Text="¿Tienes sugerencias? " FontSize="11" Foreground="#6B7280"/>
                        <TextBlock Text="Compártelas con nuestro equipo de desarrollo" 
                                   FontSize="11" Foreground="#8B5CF6" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>