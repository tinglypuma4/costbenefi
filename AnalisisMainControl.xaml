<UserControl x:Class="costbenefi.Views.AnalisisMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:costbenefi.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Mantener tus estilos actuales -->
        <Style x:Key="AnalisisButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Toolbar -->
            <RowDefinition Height="*"/>     <!-- CONTENIDO DINÁMICO -->
            <RowDefinition Height="Auto"/>  <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Header del módulo (MANTENER IGUAL) -->
        <Border Grid.Row="0" Background="#8B5CF6" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📈" FontSize="24" Foreground="White" 
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Análisis Costo-Beneficio" 
                                   FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Dashboard avanzado de rentabilidad y métricas de negocio" 
                                   FontSize="12" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="TxtFechaHora" 
                           Text="--/--/---- --:--" 
                           FontSize="12" Foreground="White" Opacity="0.9" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Toolbar con filtros y opciones (MANTENER IGUAL) -->
        <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Botones de navegación (MANTENER IGUAL) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BtnRentabilidad" Content="💰 Rentabilidad" Width="120"
                            Background="#10B981" Foreground="White" 
                            Style="{StaticResource AnalisisButtonStyle}" 
                            Click="BtnRentabilidad_Click"/>
                    
                    <Button x:Name="BtnAnalisisFinanciero" Content="💎 Financiero Avanzado" Width="150"
                        Background="#6366F1" Foreground="White"
                        Style="{StaticResource AnalisisButtonStyle}"
                        Click="BtnAnalisisFinanciero_Click"/>

                    <Button x:Name="BtnPuntoEquilibrio" Content="⚖️ Punto Equilibrio" Width="140"
                            Background="#3B82F6" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnPuntoEquilibrio_Click"/>

                    <Button x:Name="BtnMetricasAvanzadas" Content="📊 Métricas" Width="100"
                            Background="#F59E0B" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnMetricasAvanzadas_Click"/>

                    <Button x:Name="BtnAnalisisABC" Content="🔤 Análisis ABC" Width="120"
                            Background="#8B5CF6" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnAnalisisABC_Click"/>

                    <Button x:Name="BtnComparativasTempo" Content="📅 Tendencias" Width="110"
                            Background="#EF4444" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnComparativasTempo_Click"/>
                </StackPanel>

                <!-- Filtros centrales (MANTENER IGUAL) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="📅 Período:" VerticalAlignment="Center" 
                               FontSize="12" Foreground="#374151" Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="CmbPeriodo" Width="120" Height="30" 
                              VerticalContentAlignment="Center" Margin="0,0,15,0"
                              SelectionChanged="CmbPeriodo_SelectionChanged">
                        <ComboBoxItem Content="Último mes" IsSelected="True"/>
                        <ComboBoxItem Content="Últimos 3 meses"/>
                        <ComboBoxItem Content="Último semestre"/>
                        <ComboBoxItem Content="Último año"/>
                        <ComboBoxItem Content="Personalizado"/>
                    </ComboBox>

                    <TextBlock Text="🏷️ Categoría:" VerticalAlignment="Center" 
                               FontSize="12" Foreground="#374151" Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="CmbCategoria" Width="120" Height="30" 
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Todas" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>

                <!-- Botones de acción (MANTENER IGUAL) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnExportarAnalisis" Content="📊 Exportar" Width="90"
                            Background="#6366F1" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnExportarAnalisis_Click"/>

                    <Button x:Name="BtnActualizarAnalisis" Content="🔄 Actualizar" Width="100"
                            Background="#059669" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnActualizarAnalisis_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 🎯 AQUÍ ESTÁ EL CAMBIO: CONTENIDO DINÁMICO EN LUGAR DE TABCONTROL -->
        <Border Grid.Row="2" Background="#F8FAFC" Margin="15" CornerRadius="10" 
                BorderBrush="#E5E7EB" BorderThickness="1">
            <Grid>
                <!-- ContentPresenter para cargar UserControls dinámicamente -->
                <ContentPresenter x:Name="ContentPresenterModulos" 
                                Content="{Binding ModuloActual}" 
                                Margin="0"/>

                <!-- Pantalla de bienvenida por defecto -->
                <Border x:Name="PantallaBienvenida" Background="White" CornerRadius="10" Padding="40">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📈" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Bienvenido al Dashboard de Análisis" FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Foreground="#374151" Margin="0,0,0,15"/>
                        <TextBlock Text="Selecciona un módulo de análisis para comenzar" 
                                   FontSize="16" HorizontalAlignment="Center" Foreground="#6B7280" 
                                   Margin="0,0,0,30"/>
                        
                        <Border Background="#F0FDF4" CornerRadius="10" Padding="25,15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="🎯 Módulos Disponibles:" FontSize="16" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Foreground="#166534" Margin="0,0,0,15"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <StackPanel Margin="0,0,30,0">
                                        <TextBlock Text="✅ Rentabilidad" FontSize="12" Foreground="#166534" FontWeight="Bold"/>
                                        <TextBlock Text="✅ Análisis ABC" FontSize="12" Foreground="#166534" FontWeight="Bold"/>
                                        <TextBlock Text="✅ Financiero Avanzado" FontSize="12" Foreground="#166534" FontWeight="Bold"/>
                                        <TextBlock Text="✅ Punto Equilibrio" FontSize="12" Foreground="#166534" FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="🚧 Métricas Avanzadas" FontSize="12" Foreground="#92400E" FontWeight="Bold"/>
                                        <TextBlock Text="🚧 Tendencias" FontSize="12" Foreground="#92400E" FontWeight="Bold"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="👆 Haz clic en cualquier botón superior para empezar" 
                                   FontSize="14" HorizontalAlignment="Center" Foreground="#8B5CF6" 
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar (MANTENER IGUAL) -->
        <Border Grid.Row="3" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
            <Grid Margin="20,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TxtStatusAnalisis" Grid.Column="0" 
                           Text="📈 Módulo de Análisis Costo-Beneficio cargado" 
                           FontSize="11" VerticalAlignment="Center" Foreground="#6B7280"/>

                <TextBlock x:Name="TxtProductosAnalisis" Grid.Column="1" 
                           Text="Productos: 0" FontSize="11" FontWeight="Bold" 
                           Foreground="#10B981" VerticalAlignment="Center" Margin="15,0"/>

                <TextBlock x:Name="TxtPeriodoActual" Grid.Column="2" 
                           Text="Período: Último mes" FontSize="11" FontWeight="Bold" 
                           Foreground="#3B82F6" VerticalAlignment="Center" Margin="15,0"/>

                <TextBlock x:Name="TxtUltimaActualizacion" Grid.Column="3" 
                           Text="Actualizado: --:--" FontSize="11" FontWeight="Bold" 
                           Foreground="#8B5CF6" VerticalAlignment="Center" Margin="15,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>