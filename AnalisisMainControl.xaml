<UserControl x:Class="costbenefi.Views.AnalisisMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Estilos para el módulo de análisis -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#2E3B4E"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Foreground" Value="#666"/>
        </Style>

        <Style x:Key="AnalisisButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <!-- Layout principal del módulo de análisis -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Toolbar -->
            <RowDefinition Height="*"/>     <!-- Contenido principal -->
            <RowDefinition Height="Auto"/>  <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Header del módulo -->
        <Border Grid.Row="0" Background="#8B5CF6" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📈" FontSize="24" Foreground="White" 
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Análisis Costo-Beneficio" 
                                   FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Dashboard avanzado de rentabilidad y métricas de negocio" 
                                   FontSize="12" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="TxtFechaHora" 
                           Text="--/--/---- --:--" 
                           FontSize="12" Foreground="White" Opacity="0.9" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Toolbar con filtros y opciones -->
        <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Botones de navegación entre análisis -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BtnRentabilidad" Content="💰 Rentabilidad" Width="120"
                            Background="#10B981" Foreground="White" 
                            Style="{StaticResource AnalisisButtonStyle}" 
                            Click="BtnRentabilidad_Click"/>

                    <Button x:Name="BtnPuntoEquilibrio" Content="⚖️ Punto Equilibrio" Width="140"
                            Background="#3B82F6" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnPuntoEquilibrio_Click"/>

                    <Button x:Name="BtnMetricasAvanzadas" Content="📊 Métricas" Width="100"
                            Background="#F59E0B" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnMetricasAvanzadas_Click"/>

                    <Button x:Name="BtnAnalisisABC" Content="🔤 Análisis ABC" Width="120"
                            Background="#8B5CF6" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnAnalisisABC_Click"/>

                    <Button x:Name="BtnComparativasTempo" Content="📅 Tendencias" Width="110"
                            Background="#EF4444" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnComparativasTempo_Click"/>
                </StackPanel>

                <!-- Filtros centrales -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="📅 Período:" VerticalAlignment="Center" 
                               FontSize="12" Foreground="#374151" Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="CmbPeriodo" Width="120" Height="30" 
                              VerticalContentAlignment="Center" Margin="0,0,15,0">
                        <ComboBoxItem Content="Último mes" IsSelected="True"/>
                        <ComboBoxItem Content="Últimos 3 meses"/>
                        <ComboBoxItem Content="Último semestre"/>
                        <ComboBoxItem Content="Último año"/>
                        <ComboBoxItem Content="Personalizado"/>
                    </ComboBox>

                    <TextBlock Text="🏷️ Categoría:" VerticalAlignment="Center" 
                               FontSize="12" Foreground="#374151" Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="CmbCategoria" Width="120" Height="30" 
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Todas" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>

                <!-- Botones de acción -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="BtnExportarAnalisis" Content="📊 Exportar" Width="90"
                            Background="#6366F1" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnExportarAnalisis_Click"/>

                    <Button x:Name="BtnActualizarAnalisis" Content="🔄 Actualizar" Width="100"
                            Background="#059669" Foreground="White"
                            Style="{StaticResource AnalisisButtonStyle}"
                            Click="BtnActualizarAnalisis_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido principal con TabControl -->
        <TabControl x:Name="AnalisisTabControl" Grid.Row="2" 
                    Background="Transparent" BorderThickness="0"
                    Margin="10" SelectionChanged="AnalisisTabControl_SelectionChanged">
            
            <!-- Tab: Análisis de Rentabilidad -->
            <TabItem Header="💰 Rentabilidad" x:Name="TabRentabilidad">
                <Border Background="#F8FAFC" CornerRadius="8" Padding="20">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="💰" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Análisis de Rentabilidad" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Foreground="#374151" Margin="0,0,0,10"/>
                        <TextBlock Text="Márgenes brutos y netos por producto, categoría y período" 
                                   FontSize="14" HorizontalAlignment="Center" Foreground="#6B7280" 
                                   Margin="0,0,0,20"/>
                        <Border Background="#10B981" CornerRadius="6" Padding="15,8">
                            <TextBlock Text="🚧 Módulo en desarrollo - Próximamente disponible" 
                                       FontSize="12" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Tab: Punto de Equilibrio -->
            <TabItem Header="⚖️ Break-Even" x:Name="TabPuntoEquilibrio">
                <Border Background="#F8FAFC" CornerRadius="8" Padding="20">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⚖️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Punto de Equilibrio" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Foreground="#374151" Margin="0,0,0,10"/>
                        <TextBlock Text="Análisis de break-even por producto y simulación de escenarios" 
                                   FontSize="14" HorizontalAlignment="Center" Foreground="#6B7280" 
                                   Margin="0,0,0,20"/>
                        <Border Background="#3B82F6" CornerRadius="6" Padding="15,8">
                            <TextBlock Text="🚧 Módulo en desarrollo - Próximamente disponible" 
                                       FontSize="12" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Tab: Métricas Avanzadas -->
            <TabItem Header="📊 Métricas" x:Name="TabMetricas">
                <Border Background="#F8FAFC" CornerRadius="8" Padding="20">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Métricas Avanzadas" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Foreground="#374151" Margin="0,0,0,10"/>
                        <TextBlock Text="KPIs, rotación de inventario, análisis por cliente y proveedor" 
                                   FontSize="14" HorizontalAlignment="Center" Foreground="#6B7280" 
                                   Margin="0,0,0,20"/>
                        <Border Background="#F59E0B" CornerRadius="6" Padding="15,8">
                            <TextBlock Text="🚧 Módulo en desarrollo - Próximamente disponible" 
                                       FontSize="12" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Tab: Análisis ABC -->
            <TabItem Header="🔤 ABC" x:Name="TabAnalisisABC">
                <Border Background="#F8FAFC" CornerRadius="8" Padding="20">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🔤" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Análisis ABC" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Foreground="#374151" Margin="0,0,0,10"/>
                        <TextBlock Text="Clasificación de productos por rentabilidad y rotación" 
                                   FontSize="14" HorizontalAlignment="Center" Foreground="#6B7280" 
                                   Margin="0,0,0,20"/>
                        <Border Background="#8B5CF6" CornerRadius="6" Padding="15,8">
                            <TextBlock Text="🚧 Módulo en desarrollo - Próximamente disponible" 
                                       FontSize="12" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>

            <!-- Tab: Comparativas Temporales -->
            <TabItem Header="📅 Tendencias" x:Name="TabComparativas">
                <Border Background="#F8FAFC" CornerRadius="8" Padding="20">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📅" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Análisis de Tendencias" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Foreground="#374151" Margin="0,0,0,10"/>
                        <TextBlock Text="Evolución temporal de costos, márgenes y proyecciones" 
                                   FontSize="14" HorizontalAlignment="Center" Foreground="#6B7280" 
                                   Margin="0,0,0,20"/>
                        <Border Background="#EF4444" CornerRadius="6" Padding="15,8">
                            <TextBlock Text="🚧 Módulo en desarrollo - Próximamente disponible" 
                                       FontSize="12" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
            <Grid Margin="20,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TxtStatusAnalisis" Grid.Column="0" 
                           Text="📈 Módulo de Análisis Costo-Beneficio cargado" 
                           FontSize="11" VerticalAlignment="Center" Foreground="#6B7280"/>

                <TextBlock x:Name="TxtProductosAnalisis" Grid.Column="1" 
                           Text="Productos: 0" FontSize="11" FontWeight="Bold" 
                           Foreground="#10B981" VerticalAlignment="Center" Margin="15,0"/>

                <TextBlock x:Name="TxtPeriodoActual" Grid.Column="2" 
                           Text="Período: Último mes" FontSize="11" FontWeight="Bold" 
                           Foreground="#3B82F6" VerticalAlignment="Center" Margin="15,0"/>

                <TextBlock x:Name="TxtUltimaActualizacion" Grid.Column="3" 
                           Text="Actualizado: --:--" FontSize="11" FontWeight="Bold" 
                           Foreground="#8B5CF6" VerticalAlignment="Center" Margin="15,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>