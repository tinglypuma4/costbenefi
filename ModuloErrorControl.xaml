<UserControl x:Class="costbenefi.Views.ModuloErrorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <Style x:Key="ErrorButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ErrorCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="#FCA5A5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FEF2F2">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel MaxWidth="800" HorizontalAlignment="Center">

                <!-- Header del Error -->
                <Border Background="#DC2626" CornerRadius="10,10,0,0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="⚠️" FontSize="32" VerticalAlignment="Center" 
                                   Foreground="White" Margin="0,0,15,0"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Error en el Módulo" FontSize="18" FontWeight="Bold" 
                                       Foreground="White" Margin="0,0,0,5"/>
                            <TextBlock x:Name="TxtHoraReporte" Text="Error #12345 - 14:30:45" 
                                       FontSize="11" Foreground="White" Opacity="0.9"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" x:Name="TxtVersionApp" Text="v1.0.0" 
                                   FontSize="10" Foreground="White" Opacity="0.8" 
                                   VerticalAlignment="Top" HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Información Principal del Error -->
                <Border Style="{StaticResource ErrorCardStyle}" CornerRadius="0,0,10,10" 
                        BorderBrush="#DC2626" Margin="10,0,10,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Módulo -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="📋 Módulo:" 
                                   FontSize="12" FontWeight="Bold" Foreground="#7F1D1D" 
                                   VerticalAlignment="Center" Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtModuloError" 
                                   Text="Módulo Desconocido" FontSize="14" FontWeight="Bold" 
                                   Foreground="#DC2626" VerticalAlignment="Center" Margin="0,0,0,8"/>

                        <!-- Tipo de Error -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="⚡ Tipo:" 
                                   FontSize="12" FontWeight="Bold" Foreground="#7F1D1D" 
                                   VerticalAlignment="Center" Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtTipoError" 
                                   Text="Error de Módulo" FontSize="12" 
                                   Foreground="#B91C1C" VerticalAlignment="Center" Margin="0,0,0,8"/>

                        <!-- Hora del Error -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="🕒 Hora:" 
                                   FontSize="12" FontWeight="Bold" Foreground="#7F1D1D" 
                                   VerticalAlignment="Center" Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtHoraError" 
                                   Text="--/--/---- --:--:--" FontSize="12" 
                                   Foreground="#B91C1C" VerticalAlignment="Center" Margin="0,0,0,8"/>

                        <!-- ID del Error -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="🆔 ID:" 
                                   FontSize="12" FontWeight="Bold" Foreground="#7F1D1D" 
                                   VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtIdError" 
                                   Text="12345678" FontSize="12" FontFamily="Consolas"
                                   Foreground="#B91C1C" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Descripción del Error -->
                <Border Style="{StaticResource ErrorCardStyle}" BorderBrush="#F87171">
                    <StackPanel>
                        <TextBlock Text="💬 Descripción del Error" FontSize="14" FontWeight="Bold" 
                                   Foreground="#7F1D1D" Margin="0,0,0,10"/>

                        <Border Background="#FEF2F2" CornerRadius="6" Padding="15" 
                                BorderBrush="#FECACA" BorderThickness="1">
                            <TextBlock x:Name="TxtDescripcionError" 
                                       Text="No se pudo cargar el módulo especificado" 
                                       FontSize="12" Foreground="#991B1B" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Soluciones Sugeridas -->
                <Border Style="{StaticResource ErrorCardStyle}" BorderBrush="#34D399">
                    <StackPanel>
                        <TextBlock Text="💡 Soluciones Sugeridas" FontSize="14" FontWeight="Bold" 
                                   Foreground="#059669" Margin="0,0,0,15"/>

                        <Border Background="#ECFDF5" CornerRadius="6" Padding="15" 
                                BorderBrush="#A7F3D0" BorderThickness="1">
                            <StackPanel x:Name="PanelSoluciones">
                                <!-- Las soluciones se agregan dinámicamente desde el código -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="🔄" FontSize="14" Margin="0,0,10,0"/>
                                    <TextBlock Text="Cargando soluciones..." FontSize="12" 
                                               Foreground="#059669" TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Información Técnica (Colapsible) -->
                <Border Style="{StaticResource ErrorCardStyle}" BorderBrush="#A78BFA">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="🔧 Información Técnica" FontSize="14" FontWeight="Bold" 
                                       Foreground="#7C3AED" VerticalAlignment="Center"/>
                            <TextBlock Text=" (para soporte)" FontSize="10" 
                                       Foreground="#A78BFA" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                        <Expander Header="Ver detalles técnicos" FontSize="11" Foreground="#8B5CF6">
                            <Border Background="#FAF5FF" CornerRadius="6" Padding="10" Margin="0,10,0,0"
                                    BorderBrush="#DDD6FE" BorderThickness="1">
                                <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="TxtStackTrace" 
                                               Text="Información técnica no disponible" 
                                               FontSize="10" FontFamily="Consolas" 
                                               Foreground="#6B46C1" TextWrapping="Wrap"/>
                                </ScrollViewer>
                            </Border>
                        </Expander>
                    </StackPanel>
                </Border>

                <!-- Botones de Acción -->
                <Border Style="{StaticResource ErrorCardStyle}" BorderBrush="#6B7280">
                    <StackPanel>
                        <TextBlock Text="🎯 Acciones Disponibles" FontSize="14" FontWeight="Bold" 
                                   Foreground="#374151" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Botón Reintentar -->
                            <Button Grid.Column="0" x:Name="BtnReintentar" 
                                    Content="🔄 Reintentar" Height="40" FontSize="12"
                                    Background="#10B981" Foreground="White" FontWeight="Bold"
                                    Style="{StaticResource ErrorButtonStyle}"
                                    Click="BtnReintentar_Click" Margin="0,0,5,0"/>

                            <!-- Botón Volver al Inicio -->
                            <Button Grid.Column="1" x:Name="BtnVolverInicio" 
                                    Content="🏠 Ir al Inicio" Height="40" FontSize="12"
                                    Background="#3B82F6" Foreground="White" FontWeight="Bold"
                                    Style="{StaticResource ErrorButtonStyle}"
                                    Click="BtnVolverInicio_Click" Margin="2.5,0"/>

                            <!-- Botón Reportar Error -->
                            <Button Grid.Column="2" x:Name="BtnReportarError" 
                                    Content="📞 Reportar" Height="40" FontSize="12"
                                    Background="#7C3AED" Foreground="White" FontWeight="Bold"
                                    Style="{StaticResource ErrorButtonStyle}"
                                    Click="BtnReportarError_Click" Margin="5,0,0,0"/>
                        </Grid>

                        <!-- Texto informativo -->
                        <TextBlock Text="💡 Use 'Reintentar' para volver a cargar el módulo, 'Ir al Inicio' para la pantalla principal, o 'Reportar' para obtener ayuda." 
                                   FontSize="10" Foreground="#6B7280" TextWrapping="Wrap" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Footer con consejos -->
                <Border Background="#F3F4F6" CornerRadius="8" Padding="15" Margin="10,10,10,20"
                        BorderBrush="#D1D5DB" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📚 Consejos para evitar errores:" FontSize="12" FontWeight="Bold" 
                                   Foreground="#374151" Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="✅" FontSize="11" Margin="0,0,8,0"/>
                            <TextBlock Text="Asegúrese de tener una conexión estable a la base de datos" 
                                       FontSize="10" Foreground="#6B7280" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="✅" FontSize="11" Margin="0,0,8,0"/>
                            <TextBlock Text="Verifique que todos los datos necesarios estén disponibles" 
                                       FontSize="10" Foreground="#6B7280" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="✅" FontSize="11" Margin="0,0,8,0"/>
                            <TextBlock Text="Mantenga la aplicación actualizada a la última versión" 
                                       FontSize="10" Foreground="#6B7280" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>