<Window x:Class="costbenefi.EjecutarFabricacionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🏭 Ejecutar Fabricación" Height="900" Width="1400"
        WindowStartupLocation="CenterOwner" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Estilo para botones principales -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#059669"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botones secundarios -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botones de peligro -->
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B91C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para inputs -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <!-- Estilo para labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5,8,5,3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#374151"/>
        </Style>

        <!-- Estilo para DataGrid centrado -->
        <Style x:Key="CenterAlignedCell" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para alertas -->
        <Style x:Key="AlertaExito" TargetType="Border">
            <Setter Property="Background" Value="#D1FAE5"/>
            <Setter Property="BorderBrush" Value="#10B981"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="AlertaAdvertencia" TargetType="Border">
            <Setter Property="Background" Value="#FEF3C7"/>
            <Setter Property="BorderBrush" Value="#F59E0B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="AlertaError" TargetType="Border">
            <Setter Property="Background" Value="#FEE2E2"/>
            <Setter Property="BorderBrush" Value="#EF4444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20" 
                BorderBrush="#E5E7EB" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="TxtTituloFabricacion" Text="🏭 Ejecutar Fabricación" FontSize="24" FontWeight="Bold" 
                              Foreground="#1F2937"/>
                    <TextBlock x:Name="TxtSubtituloFabricacion" Text="Crear lote de fabricación y actualizar inventario" 
                              FontSize="14" Foreground="#6B7280" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🧮 Calcular Costos" Style="{StaticResource SecondaryButtonStyle}" 
                           x:Name="BtnCalcularCostos" Click="BtnCalcularCostos_Click"/>
                    <Button Content="🏭 Iniciar Fabricación" Style="{StaticResource MainButtonStyle}" 
                           x:Name="BtnIniciarFabricacion" Click="BtnIniciarFabricacion_Click"/>
                    <Button Content="❌ Cancelar" Style="{StaticResource DangerButtonStyle}" 
                           x:Name="BtnCancelar" Click="BtnCancelar_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Información del Proceso y Fabricación -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" 
                    BorderBrush="#E5E7EB" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="📋 Información del Proceso" FontSize="18" FontWeight="Bold" 
                                  Foreground="#1F2937" Margin="0,0,0,20"/>

                        <!-- Información básica del proceso -->
                        <Border Style="{StaticResource AlertaExito}" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="TxtNombreProceso" Text="Nombre del Proceso" 
                                              FontSize="16" FontWeight="Bold" Foreground="#065F46"/>
                                    <TextBlock x:Name="TxtCategoriaProceso" Text="Categoría • Tiempo estimado" 
                                              FontSize="12" Foreground="#047857" Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                    <TextBlock x:Name="TxtRendimientoProceso" Text="0.00 L" 
                                              FontSize="14" FontWeight="Bold" Foreground="#059669"/>
                                    <TextBlock Text="Rendimiento" FontSize="10" Foreground="#6B7280" 
                                              HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Configuración de Fabricación -->
                        <TextBlock Text="⚙️ Configuración de Fabricación" FontSize="16" FontWeight="Bold" 
                                  Foreground="#1F2937" Margin="0,20,0,15"/>

                        <TextBlock Text="* Cantidad a Fabricar" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" x:Name="TxtCantidadFabricar" Style="{StaticResource InputStyle}" 
                                    Text="1.00" TextChanged="TxtCantidadFabricar_TextChanged"/>

                            <TextBlock Grid.Column="1" x:Name="TxtUnidadFabricar" Text="L" 
                                      VerticalAlignment="Center" Margin="10,0,10,0" 
                                      FontSize="14" Foreground="#6B7280"/>

                            <Button Grid.Column="2" Content="Max" Style="{StaticResource SecondaryButtonStyle}"
                                   x:Name="BtnMaximoCantidad" Click="BtnMaximoCantidad_Click" 
                                   Height="35" Margin="0" Padding="5"/>
                        </Grid>

                        <!-- Cantidad máxima fabricable -->
                        <Border x:Name="BorderCantidadMaxima" Style="{StaticResource AlertaAdvertencia}" 
                                Visibility="Visible" Margin="5,5,5,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="⚠️" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" x:Name="TxtCantidadMaxima" 
                                          Text="Máximo fabricable: 0.00 L (limitado por stock)" 
                                          FontSize="12" Foreground="#92400E" TextWrapping="Wrap"/>
                            </Grid>
                        </Border>

                        <!-- Operador responsable -->
                        <TextBlock Text="Operador Responsable" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtOperadorResponsable" Style="{StaticResource InputStyle}" 
                                                 TextChanged="OnCampoChanged"/>
                        <!-- Número de lote -->
                        <TextBlock Text="Número de Lote" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="TxtNumeroLote" Style="{StaticResource InputStyle}" 
                                    IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="🔄" Style="{StaticResource SecondaryButtonStyle}"
                                   x:Name="BtnGenerarLote" Click="BtnGenerarLote_Click" 
                                   Height="35" Width="40" Margin="5,5,0,5" Padding="0"/>
                        </Grid>

                        <!-- Costos Estimados vs Reales -->
                        <TextBlock Text="💰 Costos del Lote" FontSize="16" FontWeight="Bold" 
                                  Foreground="#1F2937" Margin="0,20,0,15"/>

                        <!-- Costos Estimados -->
                        <Border Background="#F0F9FF" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="📊 Costos Estimados" FontWeight="Bold" FontSize="13" 
                                          Foreground="#0369A1" Margin="0,0,0,8"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="2"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Materiales:" FontSize="12"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtCostoEstimadoMateriales" 
                                              Text="$0.00" FontSize="12" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Mano de Obra:" FontSize="12"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtCostoEstimadoManoObra" 
                                              Text="$0.00" FontSize="12" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Costos Adicionales:" FontSize="12"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtCostoEstimadoAdicionales" 
                                              Text="$0.00" FontSize="12" FontWeight="Bold"/>

                                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                           Height="1" Background="#BFDBFE" Margin="0,5"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="TOTAL ESTIMADO:" FontSize="12" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TxtCostoEstimadoTotal" 
                                              Text="$0.00" FontSize="12" FontWeight="Bold" Foreground="#0369A1"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Costos Reales -->
                        <Border Background="#FEF3C7" CornerRadius="8" Padding="12" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="💡 Costos Reales (Ajustables)" FontWeight="Bold" FontSize="13" 
                                          Foreground="#92400E" Margin="0,0,0,8"/>

                                <TextBlock Text="Costo Real Mano de Obra" Style="{StaticResource LabelStyle}" 
                                          Margin="5,5,5,0"/>
                                <TextBox x:Name="TxtCostoRealManoObra" Style="{StaticResource InputStyle}" 
                                        Text="0.00" Height="30" TextChanged="OnCampoChanged"/>

                                <TextBlock Text="Costos Adicionales Reales" Style="{StaticResource LabelStyle}" 
                                          Margin="5,5,5,0"/>
                                <TextBox x:Name="TxtCostoRealAdicionales" Style="{StaticResource InputStyle}" 
                                        Text="0.00" Height="30" TextChanged="OnCampoChanged"/>

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="TOTAL REAL:" FontSize="12" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" x:Name="TxtCostoRealTotal" 
                                              Text="$0.00" FontSize="12" FontWeight="Bold" Foreground="#92400E"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Notas del Lote -->
                        <TextBlock Text="📝 Notas del Lote" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtNotasLote" Style="{StaticResource InputStyle}" 
                                TextWrapping="Wrap" Height="80" AcceptsReturn="True"
                                TextChanged="OnCampoChanged"/>

                        <!-- Resumen Final -->
                        <Border Background="#F0FDF4" CornerRadius="8" Padding="15" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="📈 Resumen del Lote" FontWeight="Bold" FontSize="14" 
                                          Foreground="#065F46" Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="2"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Cantidad a producir:" FontSize="12"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtResumenCantidad" 
                                              Text="0.00 L" FontSize="12" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Costo por lote:" FontSize="12"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtResumenCostoLote" 
                                              Text="$0.00" FontSize="12" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Costo unitario:" FontSize="12"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtResumenCostoUnitario" 
                                              Text="$0.00" FontSize="12" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Precio sugerido:" FontSize="12"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtResumenPrecioSugerido" 
                                              Text="$0.00" FontSize="12" FontWeight="Bold"/>

                                    <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                                           Height="1" Background="#BBF7D0" Margin="0,5"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Estado:" FontSize="12"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TxtResumenEstado" 
                                              Text="⏳ Preparando..." FontSize="12" FontWeight="Bold" 
                                              Foreground="#059669"/>

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="¿Listo para fabricar?" FontSize="12"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" x:Name="TxtResumenListoFabricar" 
                                              Text="✅ SÍ" FontSize="12" FontWeight="Bold" Foreground="#059669"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Panel Derecho - Ingredientes y Validación -->
            <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" 
                    BorderBrush="#E5E7EB" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header de Ingredientes -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="📦 Ingredientes Necesarios para el Lote" 
                                  FontSize="16" FontWeight="Bold" Foreground="#1F2937"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Border x:Name="BorderEstadoIngredientes" Background="#D1FAE5" 
                                    Padding="8,4" CornerRadius="4" Margin="0,0,5,0">
                                <TextBlock x:Name="TxtEstadoIngredientes" Text="✅ Todos disponibles" 
                                          FontSize="12" FontWeight="Bold" Foreground="#065F46"/>
                            </Border>
                            <Button Content="🔄 Verificar Stock" Style="{StaticResource SecondaryButtonStyle}" 
                                   x:Name="BtnVerificarStock" Click="BtnVerificarStock_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Lista de Ingredientes -->
                    <DataGrid Grid.Row="1" x:Name="DgIngredientesLote" 
                             AutoGenerateColumns="False" 
                             CanUserAddRows="False" 
                             CanUserDeleteRows="False"
                             SelectionMode="Single"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             Background="White"
                             Margin="0,15,0,0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding OrdenAdicion}" Width="40" 
                                               ElementStyle="{StaticResource CenterAlignedCell}"/>

                            <DataGridTextColumn Header="Ingrediente" Binding="{Binding NombreIngrediente}" Width="*"/>

                            <DataGridTextColumn Header="Necesario" Width="100" ElementStyle="{StaticResource CenterAlignedCell}">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0:F2} {1}">
                                        <Binding Path="CantidadNecesaria"/>
                                        <Binding Path="UnidadMedida"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Stock" Width="80" ElementStyle="{StaticResource CenterAlignedCell}">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="StockDisponible" StringFormat="{}{0:F2}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Estado" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding PuedeFabricarse}" Value="True">
                                                            <Setter Property="Background" Value="#D1FAE5"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding PuedeFabricarse}" Value="False">
                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="Bold" HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding PuedeFabricarse}" Value="True">
                                                                <Setter Property="Text" Value="✅ OK"/>
                                                                <Setter Property="Foreground" Value="#065F46"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding PuedeFabricarse}" Value="False">
                                                                <Setter Property="Text" Value="❌ FALTA"/>
                                                                <Setter Property="Foreground" Value="#B91C1C"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Costo" Binding="{Binding CostoTotal, StringFormat=C2}" 
                                               Width="80" ElementStyle="{StaticResource CenterAlignedCell}"/>

                            <DataGridTextColumn Header="Faltante" Width="80" ElementStyle="{StaticResource CenterAlignedCell}">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="CantidadFaltante" StringFormat="{}{0:F2}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Panel de Alertas -->
                    <StackPanel Grid.Row="2" Margin="0,15,0,0">
                        <!-- Alerta de stock insuficiente -->
                        <Border x:Name="BorderAlertaStock" Style="{StaticResource AlertaError}" 
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="⚠️ STOCK INSUFICIENTE" FontWeight="Bold" 
                                          FontSize="14" Foreground="#B91C1C"/>
                                <TextBlock x:Name="TxtAlertaStock" FontSize="12" Foreground="#B91C1C" 
                                          TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Información de producto resultante -->
                        <Border Style="{StaticResource AlertaExito}" Margin="0,5,0,0">
                            <StackPanel>
                                <TextBlock Text="🎯 Producto Resultante" FontWeight="Bold" 
                                          FontSize="13" Foreground="#065F46"/>
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:Name="TxtProductoResultante" Text="Producto de Fabricación" 
                                                  FontSize="12" FontWeight="Medium" Foreground="#047857"/>
                                        <TextBlock Text="Se agregará automáticamente al inventario" 
                                                  FontSize="11" Foreground="#065F46"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock x:Name="TxtCantidadResultante" Text="0.00 L" 
                                                  FontSize="12" FontWeight="Bold" Foreground="#059669"/>
                                        <TextBlock Text="Cantidad final" FontSize="10" Foreground="#6B7280" 
                                                  HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="15" Margin="0,20,0,0" 
                BorderBrush="#E5E7EB" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="TxtEstadoVentana" 
                          Text="⏳ Configurando fabricación..." 
                          FontSize="14" VerticalAlignment="Center" Foreground="#059669"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔍 Previsualizar" Style="{StaticResource SecondaryButtonStyle}" 
                           x:Name="BtnPrevisualizar" Click="BtnPrevisualizar_Click"/>
                    <Button Content="📋 Historial" Style="{StaticResource SecondaryButtonStyle}" 
                           x:Name="BtnHistorial" Click="BtnHistorial_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>