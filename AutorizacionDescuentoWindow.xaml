<Window x:Class="costbenefi.Views.AutorizacionDescuentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🔐 Autorización Requerida" Height="450" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F8F9FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#EF4444" CornerRadius="8" Padding="15,12" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🔐" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="AUTORIZACIÓN REQUERIDA" FontSize="16" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Información de la operación -->
        <Border Grid.Row="1" Background="#FEF3C7" BorderBrush="#F59E0B" BorderThickness="1" 
                CornerRadius="6" Padding="12" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="⚠️ OPERACIÓN RESTRINGIDA" FontWeight="Bold" FontSize="12" 
                          Foreground="#92400E" Margin="0,0,0,5"/>
                <TextBlock x:Name="TxtOperacionInfo" Text="Desea aplicar descuento." FontSize="11" 
                          Foreground="#92400E"/>
                <TextBlock Text="Solo el Dueño o un Encargado pueden autorizar esta acción." 
                          FontSize="11" FontWeight="Bold" Foreground="#92400E" 
                          Margin="0,5,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Usuario -->
        <TextBlock Grid.Row="2" Text="👤 Usuario autorizado:" FontWeight="Bold" 
                  Margin="0,0,0,5" FontSize="12"/>
        <TextBox Grid.Row="3" x:Name="TxtUsuario" Height="35" Padding="10,8,10,8" FontSize="13" 
                BorderBrush="#D1D5DB" BorderThickness="1" Margin="0,0,0,15"/>

        <!-- Contraseña -->
        <TextBlock Grid.Row="4" Text="🔑 Contraseña:" FontWeight="Bold" 
                  Margin="0,0,0,5" FontSize="12"/>
        <PasswordBox Grid.Row="5" x:Name="TxtPassword" Height="35" Padding="10,8,10,8" FontSize="13" 
                    BorderBrush="#D1D5DB" BorderThickness="1" Margin="0,0,0,15"/>

        <!-- Estado de autenticación -->
        <TextBlock Grid.Row="6" x:Name="TxtStatusAuth" 
                  Text="Ingrese las credenciales de un Dueño o Encargado" 
                  FontSize="11" Foreground="#6B7280" Margin="0,0,0,15" 
                  TextAlignment="Center"/>

        <!-- Botones -->
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="BtnCancelar" Content="❌ Cancelar" Height="40" 
                   FontSize="13" FontWeight="Bold" Background="#9CA3AF" Foreground="White" 
                   BorderThickness="0" Margin="0,0,5,0" Click="BtnCancelar_Click"/>

            <Button Grid.Column="1" x:Name="BtnAutorizar" Content="🔓 Autorizar" Height="40" 
                   FontSize="13" FontWeight="Bold" Background="#059669" Foreground="White" 
                   BorderThickness="0" Margin="5,0,0,0" Click="BtnAutorizar_Click" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>